{
    // Utilize IntelliSense para aprender sobre possíveis atributos.
    // Passe o cursor para ver descrições dos atributos existentes.
    // Para mais informações, visite: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            // Configuração para depurar o arquivo atual em Javascript
            "name": "Javascript: Current File",
            "type": "node",
            "request": "launch",
            "program": "${file}",
            "console": "internalConsole"
        },
        {
            // Configuração para depurar o arquivo atual em Python
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "internalConsole",
            "justMyCode": true
        },
        {
            // Configuração para depurar um script Node.js com argumentos
            "name": "Javascript: Script with Arguments",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/app.js",
            "args": ["arg1", "arg2"],
            "console": "internalConsole"
        },
        {
            // Configuração para depurar um módulo Python com argumentos
            "name": "Python: Module with Arguments",
            "type": "python",
            "request": "launch",
            "module": "module_name",
            "args": ["arg1", "arg2"],
            "console": "internalConsole",
            "justMyCode": true
        }
    ]
}
